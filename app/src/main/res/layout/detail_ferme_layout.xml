<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:id="@+id/idAppBar">
        <android.support.v7.widget.Toolbar
            android:id="@+id/idToolbarDetailFerme"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            tools:targetApi="LOLLIPOP" />
    </android.support.design.widget.AppBarLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="6"
                android:layout_marginTop="5dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.8"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/idImageViewPhotoDetailFerme"
                        android:layout_width="115dp"
                        android:layout_height="115dp"
                        android:src="@drawable/logo4"
                        android:scaleType="fitXY"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4.2"
                    android:orientation="vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="3dp"
                    android:layout_gravity="center"
                    android:gravity="center">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="0.8"
                            android:layout_height="wrap_content"
                            android:text="Nom ferme :"
                            android:textSize="11dp"
                            android:textColor="@color/textColorBlack"
                            android:padding="1dp"/>
                        <TextView
                            android:id="@+id/idTextViewNomDetailFerme"
                            android:layout_width="0dp"
                            android:layout_weight="1.2"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="11dp"
                            android:textColor="@color/textColorBlack"
                            android:padding="1dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="0.8"
                            android:layout_height="wrap_content"
                            android:text="Dimension :"
                            android:textSize="11dp"
                            android:textColor="@color/textColorBlack"
                            android:padding="1dp"/>
                        <TextView
                            android:id="@+id/idTextViewDimensionDetailFerme"
                            android:layout_width="0dp"
                            android:layout_weight="1.2"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="11dp"
                            android:textColor="@color/textColorBlack"
                            android:padding="1dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="0.8"
                            android:layout_height="wrap_content"
                            android:text="equipe :"
                            android:textSize="11dp"
                            android:textColor="@color/textColorBlack"
                            android:padding="1dp"/>
                        <TextView
                            android:id="@+id/idTextViewEquipeDetailFerme"
                            android:layout_width="0dp"
                            android:layout_weight="1.2"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="11dp"
                            android:textColor="@color/textColorBlack"
                            android:padding="1dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="0.8"
                            android:layout_height="wrap_content"
                            android:text="PrÃ©fecture :"
                            android:textSize="11dp"
                            android:textColor="@color/textColorBlack"
                            android:padding="1dp"/>
                        <TextView
                            android:id="@+id/idTextViewPrefectureDetailFerme"
                            android:layout_width="0dp"
                            android:layout_weight="1.2"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="11dp"
                            android:textColor="@color/textColorBlack"
                            android:padding="1dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="0.8"
                            android:layout_height="wrap_content"
                            android:text="Canton :"
                            android:textSize="11dp"
                            android:textColor="@color/textColorBlack"
                            android:padding="1dp"/>
                        <TextView
                            android:id="@+id/idTextViewCantonDetailFerme"
                            android:layout_width="0dp"
                            android:layout_weight="1.2"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="11dp"
                            android:textColor="@color/textColorBlack"
                            android:padding="1dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="0.8"
                            android:layout_height="wrap_content"
                            android:text="Village Proche :"
                            android:textSize="11dp"
                            android:textColor="@color/textColorBlack"
                            android:padding="1dp"/>
                        <TextView
                            android:id="@+id/idTextViewVillageDetailFerme"
                            android:layout_width="0dp"
                            android:layout_weight="1.2"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="11dp"
                            android:textColor="@color/textColorBlack"
                            android:padding="1dp"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="7"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/idImageViewCarte"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:src="@mipmap/ic_carte"
                    android:clickable="true"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Localiser la ferme"
                    android:textColor="@color/textColorBlack"
                    android:layout_gravity="center"
                    android:layout_weight="6"
                    android:layout_marginLeft="20dp"/>

            </LinearLayout>

            <TextView
                android:id="@+id/idTextViewTitreDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description :"
                android:textColor="@color/textColorBlack"
                android:layout_margin="5dp" />
            <TextView
                android:id="@+id/idTextViewDescriptionFerme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textColorBlack"
                android:layout_margin="5dp"
                android:textSize="12dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Liste des menbre de la ferme"
                android:textColor="@android:color/black"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/idRecycleViewFermeDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>