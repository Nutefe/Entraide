<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:background="#fff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="3dp">
            <ImageView
                android:id="@+id/idImageViewAvatarUserConnect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_logo"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp">
                <TextView
                    android:id="@+id/idTextViewNomAdminArticle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nom"
                    android:textSize="10dp"
                    android:textStyle="bold"
                    android:padding="2dp"
                    android:textColor="@android:color/black"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center">
                    <TextView
                        android:id="@+id/idTextViewDateArticle"
                        android:text="Date | Heure"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="10dp"
                        android:padding="2.5dp"
                        android:layout_weight="2"
                        android:textColor="@android:color/black"/>
                    <TextView
                        android:id="@+id/idTextViewDateHeurArticle"
                        android:text="Date | Heure"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="10dp"
                        android:padding="2dp"
                        android:layout_weight="0.5"
                        android:layout_gravity="right"
                        android:textColor="@android:color/black"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/idLineareLayouteContenu">
            <TextView
                android:id="@+id/idTextViewSujetArticle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sujet"
                android:padding="5dp"
                android:textColor="@android:color/black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/idImageViewPhoto"
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:src="@drawable/article1"
                android:scaleType="fitXY"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">
                <ImageView
                    android:id="@+id/idImageViewPhoto1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:id="@+id/idImageViewPhoto2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:id="@+id/idImageViewPhoto3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="right"
                    android:gravity="center"
                    android:weightSum="4">

                    <TextView
                        android:id="@+id/idTextViewDetailArticle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="detaile"
                        android:layout_gravity="center"
                        android:padding="6dp"
                        android:layout_weight="3"
                        android:gravity="right"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_marginTop="5dp"
                        android:textColor="@android:color/black"/>
                    <ImageView
                        android:id="@+id/idImageViewDetailArticle"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:src="@mipmap/ic_detail"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_marginTop="6dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="5dp">

            <LinearLayout
                android:id="@+id/idLinearLayoutCommentaire"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:src="@mipmap/ic_commentaire"
                    android:padding="2dp"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Commentaire"
                    android:padding="2dp"
                    android:layout_weight="4"
                    android:textColor="@android:color/black"/>
                <TextView
                    android:id="@+id/idTextViewNbrCommentaireArticle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Nombre de commentaires"
                    android:padding="2dp"
                    android:layout_weight="4"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"/>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>