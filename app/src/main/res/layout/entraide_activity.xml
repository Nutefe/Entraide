<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:padding="5dp">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayoutNom"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/textInputEditTextNom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionNext"
                android:hint="Nom"
                android:inputType="text|textCapWords"
                android:textSize="12dp"
                android:textColor="#000"
                android:maxLines="1"/>

        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayoutPrenom"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/textInputEditTextPrenom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionNext"
                android:hint="Prenom"
                android:inputType="text|textCapWords"
                android:textSize="12dp"
                android:textColor="#000"
                android:maxLines="1"/>

        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayoutAdresse"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/textInputEditTextAdresse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionNext"
                android:hint="Adresse"
                android:inputType="text|textCapWords"
                android:textSize="12dp"
                android:textColor="#000"
                android:maxLines="1"/>

        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayoutTephone"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/textInputEditTextTelephone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionNext"
                android:hint="Telephone"
                android:inputType="number"
                android:textSize="12dp"
                android:textColor="#000"
                android:maxLines="1"/>

        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayoutEmail"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/textInputEditTextEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionNext"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:textSize="12dp"
                android:textColor="#000"
                android:maxLines="1"/>

        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayoutMessage"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/textInputEditTextMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="flagNoAccessoryAction"
                android:hint="Votre message"
                android:inputType="textAutoComplete|textImeMultiLine|textCapWords"
                android:textAllCaps="true"
                android:textSize="12dp"
                android:textColor="#000"
                android:maxLines="10"/>

        </android.support.design.widget.TextInputLayout>

        <RadioGroup
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:id="@+id/radioGroup">
            <RadioButton android:id="@+id/radioMasculin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="M"
                android:layout_marginRight="10dp"/>
            <RadioButton android:id="@+id/radioFeminin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="F"
                android:layout_marginLeft="10dp"/>
        </RadioGroup>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/idAppCompatButtonSendEntraide"
            android:layout_width="250dp"
            android:text="Enregistrer"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/login_decor"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>
    </android.support.v7.widget.LinearLayoutCompat>


</android.support.v4.widget.NestedScrollView>
